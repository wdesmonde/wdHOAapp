<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>Could not save user! 
      ( <%= pluralize(@user.errors.count, "error") %> )</h2>
      <p>There were problems with the following:</p>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
   </div>
<% end %>
    
