<tr>
  <h4>Add a comment:</h4>
  <%= form_for(:comment, @comment) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.text_field :content %> 
    </div>
    <div class="actions">
      <%= f.submit "Submit Comment" %>
    </div>
  <% end %>
</tr>
